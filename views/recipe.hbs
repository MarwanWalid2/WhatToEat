<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
</head>
<body>

<h1>{{title}}</h1>

<!-- Search form -->
<form action="/recipes" method="get">
    <input type="text" name="cuisine" placeholder="Search by cuisine...">
    <button type="submit">Search</button>
</form>

{{#if recipes}}
  <ul>
    {{#each recipes}}
      <li>
        <h2>{{this.title}}</h2>
        <img src="{{this.image}}" alt="{{this.title}}" />        
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No recipes found.</p>
{{/if}}

</body>
</html>
