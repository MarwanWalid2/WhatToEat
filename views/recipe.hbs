<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/styles.css">

</head>
<body>
    <script defer src="/js/client.js"></script> 

<h1>{{title}}</h1>

<form id="recipe-search-form">
  <input type="text" id="cuisine-search" name="cuisine" placeholder="Search cuisines..." value="{{userPreferredCuisines}}">
  <button type="submit">Search</button>
</form>

<form id="ingredient-search-form">
  <input type="text" id="ingredient-search" name="ingredients" placeholder="Search by ingredients (comma-separated)..." >
  <button type="submit">Search</button>
</form>

<form id="protein-search-form">
  <input type="text" id="protein-search" name="Min Protein" placeholder="Search by Min Protein" value="{{minProtein}}" >
  <button type="submit">Search</button>
</form>


<div id="recipes-container">
  {{#if recipes}}
    <ul>
      {{#each recipes}}
        <li>
          <h2>{{this.title}}</h2>
          <img src="{{this.image}}" alt="{{this.title}}" />     
           {{#if this.nutrition.nutrients}}
                            <p>Calories: {{lookupNutrient this.nutrition.nutrients 'Calories'}}</p>
                            <p>Carbs: {{lookupNutrient this.nutrition.nutrients 'Carbohydrates'}}</p>
                            <p>Fat: {{lookupNutrient this.nutrition.nutrients 'Fat'}}</p>
                            <p>Protein: {{lookupNutrient this.nutrition.nutrients 'Protein'}}</p>
                        {{/if}}   
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p>No recipes found.</p>
  {{/if}}
</div>

</body>
</html>
